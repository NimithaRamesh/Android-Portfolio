<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/relative_layout"
                android:background="#fff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Portfolio Apps"
        android:id="@+id/my_portfolio_apps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff6a67"
        android:typeface="monospace"
        android:textIsSelectable="false"
        />


    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="Spotify Streamer"
        android:layout_below="@id/my_portfolio_apps"
        android:id="@+id/spotify_streamer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#ff6a67"
        android:textColor="#fff"
        android:onClick="spotifyStreamer"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="Scores App"
        android:id="@+id/scores_app"
        android:layout_below="@id/spotify_streamer"
        android:layout_alignRight="@+id/library_app"
        android:layout_alignEnd="@+id/library_app"
        android:backgroundTint="#ff6a67"
        android:textColor="#fff"
        android:onClick="scoresApp"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="Library App"
        android:id="@+id/library_app"
        android:layout_below="@id/scores_app"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff6a67"
        android:textColor="#fff"
        android:onClick="libraryApp"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="Build it Bigger"
        android:id="@+id/build_it_bigger"
        android:layout_below="@id/library_app"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff6a67"
        android:textColor="#fff"
        android:onClick="buildItBigger"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="XYZ reader"
        android:id="@+id/xyz_reader"
        android:layout_below="@id/build_it_bigger"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff6a67"
        android:textColor="#fff"
        android:onClick="xyzReader"/>

    <Button
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="CAPSTONE: My own app"
        android:id="@+id/capstone_my_own_app"
        android:layout_below="@id/xyz_reader"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff0305"
        android:backgroundTintMode="src_over"
        android:textColor="#fff"
        android:onClick="capstoneMyOwnApp"/>




</RelativeLayout>
